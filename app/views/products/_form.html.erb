<div class='column'>
  <%= form_with model: product do |form| %>
    <div class='form-group'> 
      <%= form.label 'Image' %>
      <%= form.file_field :image, :class => 'fileupload' %>
    </div>

    <div class='form-group'>
      <%= form.label :title %>
      <%= form.text_field :title, class: 'full-width-form-field' %>
      <% product.errors.full_messages_for(:title).each do |message| %>
        <div class='form-field-error'><%= message %></div>
      <% end %>
    </div>

    <div class='form-group'>
      <%= form.label :description %>
      <%= form.text_area :description, class: 'full-width-form-field' %>
      <% product.errors.full_messages_for(:description).each do |message| %>
        <div class='form-field-error'><%= message %></div>
      <% end %>
    </div>

    <div class='form-group'>
      <%= form.label :status %>
      <div class='row'>
        <div class='radio-pair'>
          <%= form.radio_button :status, "available" %>
          <%= form.label :status_available, 'Available' %>
        </div>
        <div class='radio-pair'>
          <%= form.radio_button :status, "sold" %>
          <%= form.label :status_sold, 'Sold' %>
        </div>
      </div>
      <% product.errors.full_messages_for(:status).each do |message| %>
        <div class='form-field-error'><%= message %></div>
      <% end %>
    </div>

    <div class='form-group'>
      <%= form.label :available_from %>
      <%= form.date_field :available_from %>
      <% product.errors.full_messages_for(:available_from).each do |message| %>
        <div class='form-field-error'><%= message %></div>
      <% end %>
    </div>

    <div class='form-group'>
      <%= form.label :price %>
      <%= form.number_field :price %>
      <% product.errors.full_messages_for(:price).each do |message| %>
        <div class='form-field-error'><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>